<div class="sheet">
<button class="bttn" type="button" data-bs-toggle="collapse" data-bs-target="#manageProducts" aria-expanded="false"
    aria-controls="manageProducts">
    <h3>Product Management</h3>
</button>
<div class="collapse" id="manageProducts">
    @{
        List<Product> products = ViewBag.AllProducts;
    }
    @await Html.PartialAsync("_AllProducts",products)
    @{
        List<Category> cats = ViewBag.AllCats;
    }
    @await Html.PartialAsync("_AllCategories",cats)
    @{
        List<Image> images = ViewBag.AllImages;
    }
    @await Html.PartialAsync("_AllImages",images)
</div>
</div>
